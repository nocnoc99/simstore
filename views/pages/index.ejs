<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); -%>
        <style>
            html {
                position: relative;
                min-height: 100%;
                /* padding-bottom: 80px; */
            }

            header {
                position: fixed;
                width: 100%;
            }

            main {
                padding: 80px;
            }

            footer {
                position: absolute;
                bottom: 0;
                width: 100%;
            }

            body {
                position: relative;
                background-image: url('bg.jpg');
                background-attachment: fixed;
                min-height: 1200px;
            }

            .left-banner {
                position: absolute;
                top: 80px;
                z-index: -1;
                width: 300px;
                /* padding: 20px; */
                padding-left: 35px;
                text-align: center;
            }

            .right-banner {
                position: absolute;
                top: 80px;
                z-index: -1;
                width: 300px;
                /* padding: 20px; */
                padding-right: 35px;
                right: 0;
                text-align: center;
            }
        </style>
</head>

<body>
    <header>
        <%- include('../partials/header'); -%>

    </header>
    <!-- <div class='left-banner'>
        <img src='banner_left.png' / class='rounded' style="width: 100%;">
    </div>
    <div class='right-banner'>
        <img src='banner_right.png' / class='rounded' style="width: 100%;">
    </div> -->
    <main class='container' id='main'>
        <div class="container-fluid text-center">
            <div class='top-banner d-flex flex-row justify-content-center'>
                <img src='https://simmart.vn/wp-content/uploads/2019/06/Banner-website.png' / class='rounded'
                    style="width: 100%;">
            </div>
            <form action='/'>
                <div style="margin-top: 18px;" class="form-group d-flex flex-row">
                    <label for="searchInput" style="width: 440px; font-weight: bold;" class='align-self-center'>Nhập số điện thoại bạn mong muốn:</label>
                    <input class="form-control" id="searchInput" name='search'
                        placeholder="Search number">
                    <button type="submit" class="btn btn-primary mx-2">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </div>
            </form>
            <table class="table table-striped table-borderless">
                <thead class='thead-light'>
                    <tr>
                        <!-- Tên cột dữ liệu -->
                        <th>Telecom</th>
                        <th>Number</th>
                        <th>Seri</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <form class='form-group' action="/api/add_sim">
                        <tr>
                            <!-- Select chọn nhà mạng -->
                            <td>
                                <select name='telecom_id' class="form-control">
                                    <option value='1'>Vinaphone</option>
                                    <option value='2'>Mobifone</option>
                                    <option value='3'>Viettel</option>
                                    <option value='4'>Vietnammobile</option>
                                    <option value='5'>Gmobile</option>
                                </select>
                            </td>
                            <!-- Ô nhập số điện thoại -->
                            <td>
                                <input name="number" class="form-control" />
                            </td>
                            <td>
                                <input name='seri' class="form-control" />
                            </td>
                            <td>
                                <input name='price' class="form-control" />
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </td>
                        </tr>
                    </form>
                    <% listsim.forEach(function(sim) { %>
                        <!-- Một dòng dữ liệu -->
                        <tr>
                            <td>
                                <img src='<%= sim.name %>.gif'/>
                            </td>
                            <td>
                                <%= sim.number %>
                            </td>
                            <td>
                                <%= sim.seri %>
                            </td>
                            <td>
                                <%= sim.price %> VND
                            </td>
                            <td>
                                <a type="button" class="btn btn-danger"
                                    href="/api/delete_sim/?sim_id=<%= sim.sim_id %>"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        <!--  -->
                        <% }); %>
                            
                </tbody>
            </table>
        </div>
    </main>

    <%- include('../partials/footer'); -%>

</body>

</html>